<Window x:Class="FifoCleanup.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:FifoCleanup.UI.Views"
        xmlns:vm="clr-namespace:FifoCleanup.UI.ViewModels"
        xmlns:conv="clr-namespace:FifoCleanup.UI.Converters"
        Title="FIFO - Gesti칩n Autom치tica de Almacenamiento | IDC Ingenier칤a"
        Width="1100" Height="700" MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:UsagePercentToColorConverter x:Key="UsageToColor"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="游닍" FontSize="22" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="FIFO - Gesti칩n de Almacenamiento" FontSize="16" FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="IDC Ingenier칤a | Sistema de limpieza autom치tica" FontSize="10"
                                   Foreground="#AABBCC"/>
                    </StackPanel>
                </StackPanel>

                <!-- Indicadores de estado RF-07 y RF-08 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border CornerRadius="10" Padding="8,3" Margin="4,0"
                            Background="{Binding IsScheduledRunning, Converter={StaticResource UsageToColor}, ConverterParameter=Bool}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Margin="0,0,4,0"
                                     Fill="{Binding IsScheduledRunning, Converter={StaticResource BoolToVis}, ConverterParameter=Color}"/>
                            <TextBlock Text="RF-07" Foreground="White" FontSize="10" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="10" Padding="8,3" Margin="4,0"
                            Background="#40FFFFFF">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Margin="0,0,4,0"
                                     Fill="{Binding IsPreventiveRunning, Converter={StaticResource BoolToVis}, ConverterParameter=Color}"/>
                            <TextBlock Text="RF-08" Foreground="White" FontSize="10" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content: TabControl -->
        <TabControl Grid.Row="1" Margin="0" Padding="0">
            <TabItem Header="游늵 Dashboard">
                <views:DashboardView DataContext="{Binding Dashboard}"/>
            </TabItem>
            <TabItem Header="丘뙖잺 Configuraci칩n">
                <views:ConfigurationView DataContext="{Binding Configuration_VM}"/>
            </TabItem>
            <TabItem Header="游빍 Simulaci칩n">
                <views:SimulationView DataContext="{Binding Simulation}"/>
            </TabItem>
            <TabItem Header="郊윒잺 Ejecuci칩n">
                <views:ExecutionView DataContext="{Binding Execution}"/>
            </TabItem>
            <TabItem Header="游늶 Bit치cora">
                <views:BitacoraView DataContext="{Binding Bitacora}"/>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource SecondaryText}"
                           VerticalAlignment="Center"/>

                <!-- Progress indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding BusyMessage}" Style="{StaticResource SecondaryText}"
                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <ProgressBar Width="120" Value="{Binding BusyProgress}" Maximum="100"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
